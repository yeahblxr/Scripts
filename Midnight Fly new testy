-- Create ScreenGui
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Parent = game.Players.LocalPlayer:WaitForChild("PlayerGui")

-- Main Frame
local Frame = Instance.new("Frame")
Frame.Size = UDim2.new(0, 200, 0, 150)
Frame.Position = UDim2.new(0.4, 0, 0.4, 0)
Frame.BackgroundColor3 = Color3.fromRGB(40, 30, 60) -- Dark purple base
Frame.BackgroundTransparency = 0.2
Frame.BorderSizePixel = 0
Frame.Parent = ScreenGui
Frame.Active = true
Frame.Draggable = true

-- UICorner for rounded edges
local FrameCorner = Instance.new("UICorner", Frame)
FrameCorner.CornerRadius = UDim.new(0, 10)

-- Minimize Button (text "-")
local MinimizeButton = Instance.new("TextButton")
MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
MinimizeButton.Position = UDim2.new(0, 5, 0, 5) -- Top left corner with padding
MinimizeButton.BackgroundColor3 = Color3.fromRGB(75, 60, 110) -- Medium purple
MinimizeButton.BackgroundTransparency = 0.3
MinimizeButton.Text = "-"
MinimizeButton.TextColor3 = Color3.fromRGB(230, 230, 250) -- Light lavender
MinimizeButton.Font = Enum.Font.GothamBold
MinimizeButton.TextSize = 24
MinimizeButton.Parent = Frame
Instance.new("UICorner", MinimizeButton).CornerRadius = UDim.new(0, 6)

-- Close Button (X) at top right corner
local CloseButton = Instance.new("TextButton")
CloseButton.Size = UDim2.new(0, 30, 0, 30)
CloseButton.Position = UDim2.new(1, -35, 0, 5)
CloseButton.BackgroundColor3 = Color3.fromRGB(180, 50, 80) -- Slightly reddish purple
CloseButton.BackgroundTransparency = 0.3
CloseButton.Text = "X"
CloseButton.TextColor3 = Color3.fromRGB(240, 240, 240)
CloseButton.Font = Enum.Font.GothamBold
CloseButton.TextSize = 18
CloseButton.Parent = Frame
Instance.new("UICorner", CloseButton).CornerRadius = UDim.new(0, 6)

CloseButton.MouseButton1Click:Connect(function()
    ScreenGui:Destroy()
end)

-- Title Label "MDNT Fly" centered top
local TitleLabel = Instance.new("TextLabel")
TitleLabel.Size = UDim2.new(0, 120, 0, 30)
TitleLabel.Position = UDim2.new(0.5, -60, 0, 5)
TitleLabel.BackgroundTransparency = 1
TitleLabel.Text = "MDNT Fly"
TitleLabel.TextColor3 = Color3.fromRGB(220, 220, 240) -- Soft off-white
TitleLabel.Font = Enum.Font.GothamBold
TitleLabel.TextSize = 20
TitleLabel.Parent = Frame

-- Fly Button (Full width)
local FlyButton = Instance.new("TextButton")
FlyButton.Size = UDim2.new(1, -10, 0, 40)
FlyButton.Position = UDim2.new(0, 5, 0, 50)
FlyButton.BackgroundColor3 = Color3.fromRGB(95, 70, 140) -- Medium purple
FlyButton.BackgroundTransparency = 0.3
FlyButton.Text = "Fly"
FlyButton.TextColor3 = Color3.fromRGB(220, 220, 240)
FlyButton.Font = Enum.Font.GothamBold
FlyButton.TextSize = 18
FlyButton.Parent = Frame
Instance.new("UICorner", FlyButton).CornerRadius = UDim.new(0, 8)

-- Number Display + and - (Minus on left, Plus on right)
local NumberValue = 3

local Minus = Instance.new("TextButton")
Minus.Size = UDim2.new(0, 50, 0, 40)
Minus.Position = UDim2.new(0, 5, 0, 100)
Minus.BackgroundColor3 = Color3.fromRGB(95, 70, 140)
Minus.BackgroundTransparency = 0.3
Minus.Text = "-"
Minus.TextColor3 = Color3.fromRGB(220, 220, 240)
Minus.Font = Enum.Font.GothamBold
Minus.TextSize = 20
Minus.Parent = Frame
Instance.new("UICorner", Minus).CornerRadius = UDim.new(0, 8)

local NumberLabel = Instance.new("TextLabel")
NumberLabel.Size = UDim2.new(0, 50, 0, 40)
NumberLabel.Position = UDim2.new(0.5, -25, 0, 100)
NumberLabel.BackgroundTransparency = 1
NumberLabel.Text = tostring(NumberValue)
NumberLabel.TextColor3 = Color3.fromRGB(220, 220, 240)
NumberLabel.Font = Enum.Font.GothamBold
NumberLabel.TextSize = 20
NumberLabel.Parent = Frame

local Plus = Instance.new("TextButton")
Plus.Size = UDim2.new(0, 50, 0, 40)
Plus.Position = UDim2.new(1, -55, 0, 100)
Plus.BackgroundColor3 = Color3.fromRGB(95, 70, 140)
Plus.BackgroundTransparency = 0.3
Plus.Text = "+"
Plus.TextColor3 = Color3.fromRGB(220, 220, 240)
Plus.Font = Enum.Font.GothamBold
Plus.TextSize = 20
Plus.Parent = Frame
Instance.new("UICorner", Plus).CornerRadius = UDim.new(0, 8)

-- Plus/Minus logic (number won't go below 1)
Plus.MouseButton1Click:Connect(function()
    NumberValue = NumberValue + 1
    NumberLabel.Text = tostring(NumberValue)
end)

Minus.MouseButton1Click:Connect(function()
    if NumberValue > 1 then
        NumberValue = NumberValue - 1
        NumberLabel.Text = tostring(NumberValue)
    end
end)

-- MH Minimized Button (initially hidden)
local MHButton = Instance.new("TextButton")
MHButton.Size = UDim2.new(0, 40, 0, 40)
MHButton.Position = Frame.Position -- Start at same position as Frame
MHButton.BackgroundColor3 = Color3.fromRGB(75, 60, 110)
MHButton.BackgroundTransparency = 0.3
MHButton.Text = "MH"
MHButton.TextColor3 = Color3.fromRGB(220, 220, 240)
MHButton.Font = Enum.Font.GothamBold
MHButton.TextSize = 18
MHButton.Parent = ScreenGui
MHButton.Visible = false
MHButton.Active = true
MHButton.Draggable = true
Instance.new("UICorner", MHButton).CornerRadius = UDim.new(0, 10)

local minimized = false
MinimizeButton.MouseButton1Click:Connect(function()
    if not minimized then
        Frame.Visible = false
        MHButton.Position = Frame.Position
        MHButton.Visible = true
        minimized = true
    end
end)

MHButton.MouseButton1Click:Connect(function()
    if minimized then
        Frame.Visible = true
        MHButton.Visible = false
        minimized = false
    end
end)

-- Fly button action placeholder
FlyButton.MouseButton1Click:Connect(function()
    print("Fly pressed")
end)
